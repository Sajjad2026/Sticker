<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/premium_lyt_bg"
    android:gravity="bottom"
    android:id="@+id/main"
    android:layoutDirection="ltr"
    tools:context=".activites.InAppActivity">

    <ImageView
        android:id="@+id/btnclose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:translationZ="3dp"
        android:padding="@dimen/_5sdp"
        android:adjustViewBounds="true"
        android:elevation="@dimen/_10sdp"
        android:src="@drawable/ic_close"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/btnclose2"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:translationZ="3dp"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        app:tint="@color/black"
        android:adjustViewBounds="true"
        android:elevation="@dimen/_10sdp"
        android:src="@drawable/ic_close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/btnclose"
        android:layout_above="@+id/linear_bottom"
        android:layout_height="@dimen/_380sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/rubik_medium"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_pro_2"
                android:textColor="@color/bg_color"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/rubik_medium"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/gradient_inapp"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_pro_3"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/rubik_medium"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/crown_icon_inapp"
                android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_premium"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:background="@drawable/premium_btn_bg"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
           />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/features_bg"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/gradient_inapp"
                    android:id="@+id/weekly"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fetching"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/txt1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_gravity="start"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/txt_dis_1"
                                android:layout_alignEnd="@id/txt_dis_1"
                                android:background="@drawable/discount_bar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fetching"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/txt_dis_1"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50% Off"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/txt_dis__desc_1"
                                android:textColor="@color/bg_color"
                                android:layout_toRightOf="@+id/txt_dis_1"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_medium"
                                android:layout_gravity="start" />

                        </RelativeLayout>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/radio1"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/check_icon"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        app:tint="@color/bg_color" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rect_unselected_bg"
                    android:id="@+id/one_month"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fetching"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/txt2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_gravity="start"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/txt_dis_2"
                                android:layout_alignEnd="@id/txt_dis_2"
                                android:background="@drawable/discount_bar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fetching"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/txt_dis_2"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50% Off"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/txt_dis__desc_2"
                                android:textColor="@color/bg_color"
                                android:layout_toRightOf="@+id/txt_dis_2"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_medium"
                                android:layout_gravity="start" />
                        </RelativeLayout>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/radio2"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/unselect_icon"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        app:tint="@color/bg_color" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rect_unselected_bg"
                    android:id="@+id/three_month"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fetching"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/txt3"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_gravity="start"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/txt_dis_3"
                                android:layout_alignEnd="@id/txt_dis_3"
                                android:background="@drawable/discount_bar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fetching"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/txt_dis_3"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50% Off"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/txt_dis__desc_3"
                                android:textColor="@color/bg_color"
                                android:layout_toRightOf="@+id/txt_dis_3"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_medium"
                                android:layout_gravity="start" />
                        </RelativeLayout>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/radio3"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/unselect_icon"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        app:tint="@color/bg_color" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rect_unselected_bg"
                    android:id="@+id/six_month"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fetching"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/txt4"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_gravity="start"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/txt_dis_4"
                                android:layout_alignEnd="@id/txt_dis_4"
                                android:background="@drawable/discount_bar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fetching"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/txt_dis_4"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_gravity="start" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50% Off"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/txt_dis__desc_4"
                                android:textColor="@color/bg_color"
                                android:layout_toRightOf="@+id/txt_dis_4"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:gravity="start"
                                android:fontFamily="@font/rubik_medium"
                                android:layout_gravity="start" />
                        </RelativeLayout>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/radio4"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/unselect_icon"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        app:tint="@color/bg_color" />

                </RelativeLayout>

            </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_base_alpha="1"
            app:shimmer_base_color="@color/grey"
            app:shimmer_colored="false"
            app:shimmer_duration="1000"
            app:shimmer_highlight_alpha="0.7"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:shimmer_intensity=".1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:id="@+id/btn_get_started"
                android:background="@drawable/splash_btn_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/let_s_start"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_14ssp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/arrow_left"/>
            </RelativeLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_8sdp"
            android:id="@+id/txt_terms"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/terms_condition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/no_commitment"/>
    </LinearLayout>
</RelativeLayout>