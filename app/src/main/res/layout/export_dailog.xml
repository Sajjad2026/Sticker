<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_to"
            android:textColor="@color/bg_color"
            android:id="@+id/txt_export"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/rubik_medium"
            android:textSize="@dimen/_14ssp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross_edit"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_close"
            android:layout_margin="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_export"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layoutDirection="ltr"
                android:id="@+id/card_1"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/labguage_bg"
                android:layout_height="@dimen/_45sdp">


                <ImageView
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:id="@+id/img_flag"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_whatsapp"
                    app:tint="@color/bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_flag"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="@string/whatsapp"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/txt_languages"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="?android:textColorPrimary"
                    />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/check_icon"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/radio_1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layoutDirection="ltr"
                android:id="@+id/card_2"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/labguage_bg"
                android:layout_height="@dimen/_45sdp">


                <ImageView
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:id="@+id/img_flag_2"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/business_icon"
                    app:tint="@color/bg_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_flag_2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="@string/business"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/txt_business"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="?android:textColorPrimary"
                    />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/unselect_icon"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/radio_2"
                    app:tint="@color/bg_color" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/cancel"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:id="@+id/cancel_btn"
                    android:includeFontPadding="false"
                    android:backgroundTint="@color/gray"
                    android:layout_weight="1"
                    android:background="@drawable/delete_btn_bg"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/black"
                    >
                </androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/export"
                    android:textSize="@dimen/_12ssp"
                    android:id="@+id/btn_export"
                    android:layout_marginEnd="30dp"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:background="@drawable/delete_btn_bg"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/white"
                    >
                </androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>